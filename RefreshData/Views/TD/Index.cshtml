@model IEnumerable<RefreshData.Models.TestData>

@{
    ViewBag.Title = "Index";
}

<h2>RefreshData - tabela</h2>

<div class="container">
    <a class="btn btn-primary" href="~/TD/Index/1">1</a>
    <a class="btn btn-primary" href="~/TD/Index/2">2</a>
    <a class="btn btn-primary" href="~/TD/Index/3">3</a>
    <a class="btn btn-primary" href="~/TD/Index/4">4</a>
    <a class="btn btn-primary" href="~/TD/Index/5">5</a>
</div>

<div id="zadnji">
    @Html.Partial("zadnji", Model.Take(5), new ViewDataDictionary { { "id", ViewData["id"] } })
</div>

<div class="container">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPostaje)
            </th>
            <th>
                Datum
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Podatek1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Podatek2)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPostaje)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dan). @Html.DisplayFor(modelItem => item.Mesec). @Html.DisplayFor(modelItem => item.Leto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Podatek1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Podatek2)

                </td>
            </tr>
        }

    </table>
</div>
<script>
    $(function () {
        setInterval(function () { $('#zadnji').load('/TD/ZadnjiPodatki/@ViewData["id"]') }, 10000);
    });
</script>